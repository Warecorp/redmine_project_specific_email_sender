<% form_for @project, :url => {:controller => 'project_emails',
     :action => 'update', :id => @project} do |f| %>
<div class="box tabular">
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :value => (params[:email] || @project.email) %>
  </p>
</div>
<%= submit_tag l(:button_update) %>
<% end %>

<div class="contextual">
  <%= link_to l(:button_reset), {:controller => 'project_emails',
        :action => 'restore_default', :id => @project},
      :class => "icon icon-del" %>
</div>
